---
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import BackToTop from "../../components/BackToTop.astro";
import SiteHead from "../../components/SiteHead.astro";
import TicTacToeContent from "../../content/projects/tictactoe.mdx";
import heroImage from "../../assets/project-card/tictactoe.png";
import "../../styles/landing.css";
import "../../styles/projects.css";

const imageMeta = heroImage;
const heroImageSrc =
  typeof imageMeta === "string" ? imageMeta : imageMeta?.src ?? imageMeta;
const heroImageWidth =
  typeof imageMeta === "object" && "width" in imageMeta
    ? imageMeta.width
    : undefined;
const heroImageHeight =
  typeof imageMeta === "object" && "height" in imageMeta
    ? imageMeta.height
    : undefined;

const techTags = ["nodejs", "express", "socketio", "html", "css", "javascript"];

type ResourceLink = {
  icon: string;
  label: string;
  href?: string;
};

const resourceLinks: ResourceLink[] = [
  {
    icon: "fa-solid fa-globe",
    label: "Project website",
    href: "https://realtime-tictactoe-fca8.onrender.com",
  },
];

type RepoLink = {
  label: string;
  href: string;
};

const repoLinks: RepoLink[] = [
  {
    label: "source code",
    href: "https://github.com/davenarchives/realtime-tictactoe",
  },
];

const tableOfContents = [
  {
    title: "Project Overview",
    items: [
      { label: "Overview", href: "#overview" },
      { label: "Features", href: "#features" },
      {
        label: "Multiplayer Lobby & Matchmaking",
        href: "#multiplayer-lobby--matchmaking",
      },
      {
        label: "Game Mode Voting & Series Play",
        href: "#game-mode-voting--series-play",
      },
      {
        label: "Authoritative Gameplay Loop",
        href: "#authoritative-gameplay-loop",
      },
      {
        label: "UX Polish & Accessibility",
        href: "#ux-polish--accessibility",
      },
      { label: "Project Structure", href: "#project-structure" },
      { label: "Tech Stack", href: "#tech-stack" },
    ],
  },
  {
    title: "Execution",
    items: [
      { label: "Setup & Running", href: "#setup--running" },
      { label: "Game Flow", href: "#game-flow" },
    ],
  },
  {
    title: "Technical Reference",
    items: [
      { label: "Socket Events", href: "#socket-events" },
      {
        label: "Configuration & Customization",
        href: "#configuration--customization",
      },
      { label: "Styling & Assets", href: "#styling--assets" },
      {
        label: "Testing & Development Notes",
        href: "#testing--development-notes",
      },
    ],
  },
  {
    title: "Operations",
    items: [{ label: "License", href: "#license" }],
  },
];
---

<html lang="en">
  <head>
    <SiteHead title="Tic Tac Toe | davenarchives" />
  </head>
  <body>
    <div class="page project-detail-page">
      <Header active="projects" />
      <main class="project-detail-layout">
        <section
          class="project-showcase"
          aria-label="Highlighted preview of the Tic Tac Toe project"
        >
          <div class="project-showcase__frame">
            <img
              src={heroImageSrc}
              width={heroImageWidth}
              height={heroImageHeight}
              alt="Screenshot of the realtime Tic Tac Toe lobby and board"
              loading="lazy"
            />
          </div>
          <footer class="project-showcase__meta">
            <ul class="project-tag-list" aria-label="Technology stack">
              {techTags.map((tag) => (
                <li>
                  <span>#{tag}</span>
                </li>
              ))}
            </ul>
            <div class="project-resource-links" aria-label="Project resources">
              {resourceLinks.map((link) => (
                link.href ? (
                  <a
                    class="project-resource-links__item"
                    title={link.label}
                    href={link.href}
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    <i class={link.icon} aria-hidden="true"></i>
                    <span class="sr-only">{link.label}</span>
                  </a>
                ) : (
                  <span class="project-resource-links__item" title={link.label}>
                    <i class={link.icon} aria-hidden="true"></i>
                    <span class="sr-only">{link.label}</span>
                  </span>
                )
              ))}
              {repoLinks.map((repo) => (
                <a
                  class="project-resource-links__item"
                  title={repo.label}
                  href={repo.href}
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <i class="fa-brands fa-github" aria-hidden="true"></i>
                  <span class="sr-only">{repo.label}</span>
                </a>
              ))}
            </div>
          </footer>
        </section>

        <div class="project-detail__grid">
          <section class="project-writeup">
            <header class="project-writeup__header">
              <h1 class="project-writeup__title" style="color: #0cc0df;">
                TIC TAC TOE
              </h1>
              <div
                class="project-writeup__subtitle-card"
                style="border-left-color: #0cc0df;"
              >
                <p class="project-writeup__subtitle">
                  Socket.IO-powered lobby that matches players and spectators
                  into multi-round Tic Tac Toe series with authoritative
                  server-side state.
                </p>
              </div>
            </header>
            <article
              class="project-article project-article--detail"
              aria-label="Tic Tac Toe project documentation"
            >
              <TicTacToeContent />
            </article>
          </section>
          <aside class="project-sidebar" aria-label="On this page">
            <div class="project-sidebar__card">
              <p class="project-sidebar__label">On this page</p>
              <nav aria-label="Table of contents">
                <ul class="project-toc">
                  {tableOfContents.map((group) => (
                    <li class="project-toc__group">
                      <h2>{group.title}</h2>
                      <ul>
                        {group.items.map((item) => (
                          <li>
                            <a href={item.href}>{item.label}</a>
                          </li>
                        ))}
                      </ul>
                    </li>
                  ))}
                </ul>
              </nav>
            </div>
          </aside>
        </div>
      </main>
      <Footer />
      <BackToTop />
    </div>
  </body>
</html>
