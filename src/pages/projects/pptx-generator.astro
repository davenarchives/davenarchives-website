---
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import BackToTop from "../../components/BackToTop.astro";
import PPTXGeneratorContent from "../../content/projects/pptxgenerator.mdx";
import heroImage from "../../assets/project-card/pptxgenerator.png";
import "../../styles/landing.css";
import "../../styles/projects.css";

const imageMeta = heroImage;
const heroImageSrc =
  typeof imageMeta === "string" ? imageMeta : imageMeta?.src ?? imageMeta;
const heroImageWidth =
  typeof imageMeta === "object" && "width" in imageMeta
    ? imageMeta.width
    : undefined;
const heroImageHeight =
  typeof imageMeta === "object" && "height" in imageMeta
    ? imageMeta.height
    : undefined;

const techTags = ["react", "fastapi", "gemini", "python", "unsplash"];

type ResourceLink = {
  icon: string;
  label: string;
  href?: string;
};

const resourceLinks: ResourceLink[] = [
  {
    icon: "fa-solid fa-globe",
    label: "Live demo coming soon",
  },
  {
    icon: "fa-brands fa-github",
    label: "Source available soon",
  },
];

const tableOfContents = [
  {
    title: "Project Overview",
    items: [
      { label: "Overview", href: "#overview" },
      { label: "Core Features", href: "#core-features" },
      { label: "System Architecture", href: "#system-architecture" },
      { label: "Data Flow", href: "#data-flow" },
      { label: "Project Structure", href: "#project-structure" },
      { label: "Tech Stack", href: "#tech-stack" },
    ],
  },
  {
    title: "Setup",
    items: [
      { label: "Prerequisites", href: "#prerequisites" },
      { label: "Environment Variables", href: "#environment-variables" },
      { label: "Setup & Installation", href: "#setup--installation" },
      { label: "Backend Setup", href: "#backend" },
      { label: "Frontend Setup", href: "#frontend" },
      { label: "Running in Production", href: "#running-in-production" },
    ],
  },
  {
    title: "Technical Reference",
    items: [
      { label: "API Reference", href: "#api-reference" },
      {
        label: "Presentation Generation Details",
        href: "#presentation-generation-details",
      },
      { label: "Quality & Tooling", href: "#quality--tooling" },
    ],
  },
  {
    title: "Operations",
    items: [
      { label: "Troubleshooting", href: "#troubleshooting" },
      { label: "Maintenance Notes", href: "#maintenance-notes" },
      {
        label: "Future Enhancements",
        href: "#future-enhancements-suggestions",
      },
      { label: "License", href: "#license" },
      { label: "Support & Contribution", href: "#support--contribution" },
    ],
  },
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>PPTX Generator | davenarchives</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lilita+One&family=Montserrat:wght@400;500;600;700;800&family=Palanquin+Dark:wght@400;500;600&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
      integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
  </head>
  <body>
    <div class="page project-detail-page">
      <Header active="projects" />
      <main class="project-detail-layout">
        <section
          class="project-showcase"
          aria-label="Highlighted preview of the PPTX Generator project"
        >
          <div class="project-showcase__frame">
            <img
              src={heroImageSrc}
              width={heroImageWidth}
              height={heroImageHeight}
              alt="Preview of the PPTX Generator application"
              loading="lazy"
            />
          </div>
          <footer class="project-showcase__meta">
            <ul class="project-tag-list" aria-label="Technology stack">
              {techTags.map((tag) => (
                <li>
                  <span>#{tag}</span>
                </li>
              ))}
            </ul>
            <div class="project-resource-links" aria-label="Project resources">
              {resourceLinks.map((link) => (
                <span class="project-resource-links__item" title={link.label}>
                  <i class={link.icon} aria-hidden="true"></i>
                  <span class="sr-only">{link.label}</span>
                </span>
              ))}
            </div>
          </footer>
        </section>

        <div class="project-detail__grid">
          <section class="project-writeup">
            <header class="project-writeup__header">
              <h1 class="project-writeup__title">PPTX Generator</h1>
              <p class="project-writeup__subtitle">
                Full-stack automation that builds AI-assisted presentation decks
                end to end.
              </p>
            </header>
            <article
              class="project-article project-article--detail"
              aria-label="PPTX Generator project documentation"
            >
              <PPTXGeneratorContent />
            </article>
          </section>
          <aside class="project-sidebar" aria-label="On this page">
            <div class="project-sidebar__card">
              <p class="project-sidebar__label">On this page</p>
              <nav aria-label="Table of contents">
                <ul class="project-toc">
                  {tableOfContents.map((group) => (
                    <li class="project-toc__group">
                      <h2>{group.title}</h2>
                      <ul>
                        {group.items.map((item) => (
                          <li>
                            <a href={item.href}>{item.label}</a>
                          </li>
                        ))}
                      </ul>
                    </li>
                  ))}
                </ul>
              </nav>
            </div>
          </aside>
        </div>
      </main>
      <Footer />
      <BackToTop />
    </div>
  </body>
</html>
