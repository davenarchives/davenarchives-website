---
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import BackToTop from "../../components/BackToTop.astro";
import AnisekaiContent from "../../content/projects/anisekai.mdx";
import heroImage from "../../assets/project-card/anisekai.png";
import "../../styles/landing.css";
import "../../styles/projects.css";

const imageMeta = heroImage;
const heroImageSrc =
  typeof imageMeta === "string" ? imageMeta : imageMeta?.src ?? imageMeta;
const heroImageWidth =
  typeof imageMeta === "object" && "width" in imageMeta
    ? imageMeta.width
    : undefined;
const heroImageHeight =
  typeof imageMeta === "object" && "height" in imageMeta
    ? imageMeta.height
    : undefined;

const techTags = ["reactnative", "expo", "convex", "gemini"];

type ResourceLink = {
  icon: string;
  label: string;
  href?: string;
};

const resourceLinks: ResourceLink[] = [
  {
    icon: "fa-brands fa-figma",
    label: "Figma design",
    href: "https://www.figma.com/design/SBQ1imgI5uYeoWmK9QNfhf/Anisekai-Mobile?node-id=0-1&t=qOfXkXT0a9boTbIU-1",
  },
];

type RepoLink = {
  label: string;
  href: string;
};

const repoLinks: RepoLink[] = [
  {
    label: "source code",
    href: "https://github.com/MobileProgramming-USTP/Anisekai",
  },
];

const tableOfContents = [
  {
    title: "Project Overview",
    items: [
      { label: "Overview", href: "#overview" },
      { label: "Features", href: "#features" },
      { label: "Project Structure", href: "#project-structure" },
    ],
  },
  {
    title: "Tech & Architecture",
    items: [
      { label: "Tech Stack", href: "#tech-stack" },
      {
        label: "Environment Configuration",
        href: "#environment-configuration-srcconfigenvjs-envlocal",
      },
      {
        label: "Navigation & Screen Flows",
        href: "#navigation--screen-flows",
      },
      {
        label: "Data & API Integrations",
        href: "#data--api-integrations",
      },
      {
        label: "State Management & Data Flow",
        href: "#state-management--data-flow",
      },
      { label: "Styling & Theming", href: "#styling--theming" },
    ],
  },
  {
    title: "Build & Ops",
    items: [
      { label: "Getting Started", href: "#getting-started" },
      {
        label: "Development Workflow",
        href: "#development-workflow",
      },
      { label: "Testing & Quality", href: "#testing--quality" },
      {
        label: "Accessibility & Performance",
        href: "#accessibility--performance-considerations",
      },
      {
        label: "Deployment & Build Notes",
        href: "#deployment--build-notes",
      },
      { label: "Troubleshooting", href: "#troubleshooting" },
    ],
  },
  {
    title: "Roadmap",
    items: [
      {
        label: "Roadmap & Future Enhancements",
        href: "#roadmap--future-enhancements",
      },
      { label: "Contributing", href: "#contributing" },
      { label: "License", href: "#license" },
    ],
  },
];
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>ANISEKAI | davenarchives</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lilita+One&family=Montserrat:wght@400;500;600;700;800&family=Palanquin+Dark:wght@400;500;600&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
      integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
  </head>
  <body>
    <div class="page project-detail-page">
      <Header active="projects" />
      <main class="project-detail-layout">
        <section
          class="project-showcase"
          aria-label="Highlighted preview of the ANISEKAI project"
        >
          <div class="project-showcase__frame">
            <img
              src={heroImageSrc}
              width={heroImageWidth}
              height={heroImageHeight}
              alt="Preview of the ANISEKAI mobile app"
              loading="lazy"
            />
          </div>
          <footer class="project-showcase__meta">
            <ul class="project-tag-list" aria-label="Technology stack">
              {techTags.map((tag) => (
                <li>
                  <span>#{tag}</span>
                </li>
              ))}
            </ul>
            <div class="project-resource-links" aria-label="Project resources">
              {resourceLinks.map((link) => (
                link.href ? (
                  <a
                    class="project-resource-links__item"
                    title={link.label}
                    href={link.href}
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    <i class={link.icon} aria-hidden="true"></i>
                    <span class="sr-only">{link.label}</span>
                  </a>
                ) : (
                  <span class="project-resource-links__item" title={link.label}>
                    <i class={link.icon} aria-hidden="true"></i>
                    <span class="sr-only">{link.label}</span>
                  </span>
                )
              ))}
              {repoLinks.map((repo) => (
                <a
                  class="project-resource-links__item"
                  title={repo.label}
                  href={repo.href}
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <i class="fa-brands fa-github" aria-hidden="true"></i>
                  <span class="sr-only">{repo.label}</span>
                </a>
              ))}
            </div>
          </footer>
        </section>

        <div class="project-detail__grid">
          <section class="project-writeup">
            <header class="project-writeup__header">
              <h1 class="project-writeup__title" style="color: #ff6bc3;">
                ANISEKAI
              </h1>
              <div
                class="project-writeup__subtitle-card"
                style="border-left-color: #ff6bc3;"
              >
                <p class="project-writeup__subtitle">
                  Mobile anime + manga companion for logging episodes and
                  chapters, organizing vibe-based boards, and receiving Gemini
                  powered discovery nudges while you are on the go.
                </p>
              </div>
            </header>
            <article
              class="project-article project-article--detail"
              aria-label="ANISEKAI project documentation"
            >
              <AnisekaiContent />
            </article>
          </section>
          <aside class="project-sidebar" aria-label="On this page">
            <div class="project-sidebar__card">
              <p class="project-sidebar__label">On this page</p>
              <nav aria-label="Table of contents">
                <ul class="project-toc">
                  {tableOfContents.map((group) => (
                    <li class="project-toc__group">
                      <h2>{group.title}</h2>
                      <ul>
                        {group.items.map((item) => (
                          <li>
                            <a href={item.href}>{item.label}</a>
                          </li>
                        ))}
                      </ul>
                    </li>
                  ))}
                </ul>
              </nav>
            </div>
          </aside>
        </div>
      </main>
      <Footer />
      <BackToTop />
    </div>
  </body>
</html>
