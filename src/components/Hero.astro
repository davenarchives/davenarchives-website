---
type HeroProps = {
  tvFrameSrc: string;
  retroCatSrc: string;
};

const { tvFrameSrc, retroCatSrc } = Astro.props as HeroProps;
const defaultAlt = "Illustration of a retro television set";
const retroCatAlt = "Pixel cat popping out of a retro screen";
---
<main class="hero">
  <section class="hero-copy">
    <h1>
      <span class="line">THE ART OF</span>
      <span class="line line--accent">VIBE CODING.</span>
    </h1>
    <p class="tagline">
      <span class="tagline-line">
        Turn syntax errors into happy accidents -
      </span>
      <span class="tagline-line tagline-line--accent">
        <span class="highlight highlight--yellow hover-gif-trigger" data-gif="play">
          vibe harder
        </span>, 
        <span class="highlight highlight--pink hover-gif-trigger" data-gif="sleep">
          code faster.
        </span>
      </span>
    </p>
    <a class="cta" href="#start">LEARN MORE</a>
  </section>
  <section class="hero-visual" aria-label="Retro television">
    <img
      class="tv"
      src={tvFrameSrc}
      data-default-src={tvFrameSrc}
      data-default-alt={defaultAlt}
      data-alt-src={retroCatSrc}
      data-alt-alt={retroCatAlt}
      alt={defaultAlt}
      role="button"
      tabindex="0"
      aria-pressed="false"
      aria-label="Toggle retro television animation"
    />
  </section>
</main>
